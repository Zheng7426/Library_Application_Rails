<h1>Personal Bookmark</h1>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% current_user.favorites.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= link_to 'Show', book_path(book, state: "bookmark"), class: "btn btn-dark" %></td>
      <td><%= link_to "unfavorite", favorite_book_path(book, type: "unfavorite", state: "bookmark"), method: :put, class: "btn btn-warning" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'Back', root_path, class: "btn btn-success" %>