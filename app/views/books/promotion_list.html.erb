<h1>Promotion List</h1>
<table>
  <thead>
  <tr>
    <th>ISBN</th>
    <th>Title</th>
    <th>Author</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% $promotion_list.each do |book| %>
    <tr>
      <td><%= book["ISBN"] %></td>
      <td><%= book["title"] %></td>
      <td><%= book["author"] %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'Back', book_actions_path(isbn: @isbn), class: "btn btn-primary" %>