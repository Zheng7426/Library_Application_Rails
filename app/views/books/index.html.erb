<h1>Books</h1>
<%= form_with(local: true, method: "get") do |form| %>
  <%= select_tag(:genre_id, options_for_select([['hardcover-fiction', 1], ['hardcover-nonfiction', 2], ['animals', 3]])) %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<p><%= @genre_id %></p>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books_return.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= link_to 'Show', book %></td>
        <td>
          <% if current_user %>
            <%= link_to "favorite",   favorite_book_path(book, type: "favorite"), method: :put %>
            <%= link_to "unfavorite", favorite_book_path(book, type: "unfavorite"), method: :put %>
          <% end %>
          <% if logged_in_as_employee? %>
            <%= link_to 'Edit', edit_book_path(book) %>
          <% end %>
        </td>
<!--        <td><%#= link_to 'Edit', edit_book_path(book) %></td>-->
<!--        <td><%#= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

