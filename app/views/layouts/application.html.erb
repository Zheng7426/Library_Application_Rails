<!DOCTYPE html>
<html>
  <head>
    <title>Library</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css" integrity="sha384-Bfad6CLCknfcloXFOyFnlgtENryhrpZCe29RTifKEixXQZ38WheV+i/6YWSzkz3V" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-light justify-content-between mb-4" style="background-color: rgb(42,89,138);">
    <a class="navbar-brand" href="<%= root_path %>"><%= image_tag("logo.png") %></a>
    <span class="navbar-text">
      <% if notice %>
        <span class="alert alert-success"><%= notice %></span>
      <% end %>
      <% if alert %>
        <span class="alert alert-danger"><%= alert %></span>
      <% end %>
    </span>
    <span class="navbar-text text-light">
      <% if user_signed_in? %>
        Logged in as <strong><%= current_user.email %></strong>.
          <% if current_user.avatar.attached? %>
              <%= image_tag user_avatar(current_user, 40), class: "rounded-circle" %>
          <% end %>
        <%= link_to 'Edit profile', edit_user_registration_path, :class => 'btn btn-sm btn-primary text-light' %> |
        <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn btn-sm btn-success text-light'  %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path, :class => 'btn btn-sm btn-primary text-light'  %> |
        <%= link_to "Login", new_user_session_path, :class => 'btn btn-sm btn-success text-light'  %>
      <% end %>
    </span>

<!--    <form class="form-inline">-->
<!--      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">-->
<!--      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>-->
<!--    </form>-->
  </nav>



<!--  <div>-->
    <%# if @user.avatar.attached? %>
      <%#= image_tag @user.avatar %>
    <%# end %>
<!--  </div>-->
  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
